{
  "name": "energy-monitoring",
  "private": true,
  "scripts": {
    "build": "pnpm sync-env && turbo build",
    "dev": "pnpm sync-env && turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "sync-env": "powershell -ExecutionPolicy Bypass -File ./scripts/distribute-envs.ps1",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.5.0",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@9.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
